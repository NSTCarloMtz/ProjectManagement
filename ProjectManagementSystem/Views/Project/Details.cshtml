@using ProjectManagementSystem.ViewModel.Project

@model ProjectViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Activity</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        
        <dt>
            @Html.DisplayNameFor(model => model.InternalCode)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.InternalCode)
        </dd>
        
        <dt>
            @Html.DisplayNameFor(model => model.Active)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Active)
        </dd>
        
        <dt>
            @Html.DisplayNameFor(model => model.Activities)
        </dt>

        <dd>
            @foreach (var activity in Model.Activities)
            {
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => activity.Description)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => activity.Description)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => activity.Active)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => activity.Active)
                    </dd>

                </dl>
            }
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
